@model PasswordChangeDTO
@{
	ViewBag.Title = "Şifre Güncelleme Sayfası";
}

<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
	<div class="container">

		<form asp-controller="Account" asp-action="UpdatePassword" method="post">
			<div class="row">
				<div class="col-lg-12">
					<div class="billing-details">
						<h3 class="title">Giriş Sayfası</h3>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label asp-for="OldPassword"></label>
									<input asp-for="OldPassword" class="form-control">
									<span asp-validation-for="OldPassword" class="text-danger"></span>
								</div>
							</div>
							</div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword" class="form-control">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            </div>
                        <div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label asp-for="ConfirmNewPassword"></label>
									<input asp-for="ConfirmNewPassword" class="form-control">
									<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
								</div>
							</div>
							</div>
							<div class="row">
							<div class="col-lg-4">
								<div class="payment-box mt-30">
									<input type="submit" class="main-btn" value="Şifre Güncelle" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
{
<style>
	input {
		border: solid 1px #e3eeff;
		height: 50px;
		padding: 0 15px
	}
</style>
}