@model UserProfileDTO

@{
	ViewBag.Title = "Profil Sayfası";
}

<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
	<div class="container">
        <div class="text-info">@TempData["Message"]</div>
        <div class="text-info">@ViewBag.Message</div>
		<form asp-controller="Account" asp-action="Profile" method="post">
			<div class="row">
				<div class="col-lg-12">
					<div class="billing-details">
						<h3 class="title">Profil Formu</h3>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Surname"></label>
                                    <input asp-for="Surname" class="form-control">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
	                        <div class="col-lg-6">
		                        <div class="form-group">
			                        <label asp-for="Email"></label>
			                        <input asp-for="Email" class="form-control">
			                        <span asp-validation-for="Email" class="text-danger"></span>
		                        </div>
	                        </div>
	                        <div class="col-lg-6">
		                        <div class="form-group">
			                        <label asp-for="PhoneNumber"></label>
			                        <input asp-for="PhoneNumber" class="form-control">
			                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
		                        </div>
	                        </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 margins">
                                <div class="payment-box mt-30">
                                    <a asp-action="UpdatePassword" asp-controller="Account">Şifre Güncelleme</a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
							<div class="col-lg-4">
								<div class="payment-box mt-30">
									<input type="submit" class="main-btn" value="Profil Güncelle" />
								</div>
							</div>

						</div>
						
					</div>
				</div>
			</div>
		</form>

	</div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
{
<style>
	input {
		border: solid 1px #e3eeff;
		height: 50px;
		padding: 0 15px
	}
	.margins {
        margin-bottom: 10px;
    }
</style>
}