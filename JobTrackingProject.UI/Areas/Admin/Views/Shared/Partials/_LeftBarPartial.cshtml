@inject SignInManager<ApplicationUser> SignInManager

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
	<!-- Brand Logo -->
	<a href="index3.html" class="brand-link">
		<img src="~/admin-assets/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
			 style="opacity: .8">
		<span class="brand-text font-weight-light">AdminLTE 3</span>
	</a>

	<!-- Sidebar -->
	<div class="sidebar">
		<!-- Sidebar user panel (optional) -->
		<div class="user-panel mt-3 pb-3 mb-3 d-flex">
			<div class="image">
				<img src="~/admin-assets/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
			</div>
			<div class="info">
				<a href="#" class="d-block">@User.Identity.Name</a>
			</div>
		</div>

		<!-- Sidebar Menu -->
		<nav class="mt-2">
			<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
				<!-- Add icons to the links using the .nav-icon class
				with font-awesome or any other icon font library -->
				@if (SignInManager.IsSignedIn(Context.User))
				{
					if (User.IsInRole("Admin"))
					{
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Manage" asp-action="Index" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Home
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Manage" asp-action="Users" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Users
								</p>
							</a>
						</li>

						<li class="nav-item has-treeview">
							<a href="#" class="nav-link">
								<i class="nav-icon far fa-envelope"></i>
								<p>
									Staff Register
									<i class="fas fa-angle-left right"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a asp-area="Admin" asp-controller="Manage" asp-action="OperatorRegister" class="nav-link">
										<i class="nav-icon far fa-image"></i>
										<p>
											Operator Register
										</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-area="Admin" asp-controller="Manage" asp-action="TechnicianRegister" class="nav-link">
										<i class="nav-icon far fa-image"></i>
										<p>
											Technician Register
										</p>
									</a>
								</li>
								
							</ul>
						</li>
						<li class="nav-item has-treeview">
							<a href="#" class="nav-link">
								<i class="nav-icon far fa-envelope"></i>
								<p>
									Add Option 
									<i class="fas fa-angle-left right"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a asp-area="Admin" asp-controller="Manage" asp-action="AddCategory" class="nav-link">
										<i class="nav-icon far fa-image"></i>
										<p>
											Add Category
										</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-area="Admin" asp-controller="Manage" asp-action="AddProduct" class="nav-link">
										<i class="nav-icon far fa-image"></i>
										<p>
											Add Product
										</p>
									</a>
								</li>
								
							</ul>
						</li>
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Manage" asp-action="AllTicket" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
								 	All Tickets
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Manage" asp-action="AddCategory" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Empty
								</p>
							</a>
						</li>
					}
					else if (User.IsInRole("Operator"))
					{
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Operator" asp-action="Index" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Home
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Operator" asp-action="Tickets" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Tickets
								</p>
							</a>
						</li>
					}
					else if (User.IsInRole("Technician"))
					{
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Technician" asp-action="Index" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Home
								</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-area="Admin" asp-controller="Technician" asp-action="Tickets" class="nav-link">
								<i class="nav-icon far fa-image"></i>
								<p>
									Tickets
								</p>
							</a>
						</li>
					}

				}

			</ul>
		</nav>
		<!-- /.sidebar-menu -->
	</div>
	<!-- /.sidebar -->
</aside>

